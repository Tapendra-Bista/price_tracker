{
  "manifest_version": 3,
  "name": "Price Tracker",
  "version": "1.0",
  "description": "Track live NEPSE stock prices with automatic badge updates",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Loading...",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://nepsetty.kokomo.workers.dev/*"
  ]
}
